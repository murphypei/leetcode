{
    "version": "0.1.0",
    "command": "g++",
    "args": ["-g", "-Wall", "-std=c++11","${file}","-o","out.exe"],    // 编译命令参数
    "showOutput": "always",
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}